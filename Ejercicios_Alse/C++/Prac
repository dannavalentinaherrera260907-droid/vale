#include <iostream>
#include <cmath>
using namespace std;

int main(){
    int arr[5];
    for(int i = 0 ; i < 5 ; i++) {
        arr[i] = static_cast<int>(pow(2.0, i));  // Cambio: 2.0 en lugar de 2
        cout << "arr["<<i<<"]: " << arr[i] << endl;  // Cambio: cout sin std::
    }
    int matr[3][3];
    matr[0][0]=0;
    
    return 0;  // Buena prÃ¡ctica
}